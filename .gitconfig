# vim:ft=gitconfig:noet:sw=8
[alias]
	co = checkout
	ci = ci-status -v
	cb = check-branches
	ls = log --pretty=format:'%C(yellow)%h  %C(blue bold)%<(20,trunc)%cN  %Cgreen%<(13,trunc)%ar  %Creset%s'
	l1 = log --oneline
	bb = branch -r --list 'bueh*'
	p = pull-request -o
[color]
	ui = true
[grep]
	patternType = perl
[hub]
	host = github.com
	host = github.fidor.de
	protocol = ssh
[interactive]
	singleKey = true
[log]
	decorate = short
[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[mergetool "vimdiff"]
	path = nvim
[rerere]
	enabled = true
[rebase]
	autoSquash = true
[pull]
	ff = only
[push]
	default = current

# Include machine-specific config
[include]
	path = ~/.gitconfig.local
